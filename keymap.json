[
  {
    "context": "Workspace",
    "bindings": {
      // Open the finder
      "shift shift": "file_finder::Toggle",

      // Toggle Terminal in Bottom Dock
      "ctrl ctrl": "workspace::ToggleBottomDock"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-d": "editor::DuplicateLineDown"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      // Clear the Terminal
      "ctrl-l": "terminal::Clear"
    }
  }
]
